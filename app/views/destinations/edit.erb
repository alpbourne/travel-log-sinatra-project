<h3><%=@destination.name%></h3>
<form action="/destinations/<%=@destination.id%>" method="POST">
  <label>Edit Name</label>
  <input type="text" name="name" value="<%=@destination.name%>">
  <br>
  <input type="submit" value="Update">
</form>
<form action="/destinations/<%=@destination.id%>/delete" method="POST">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Destination" id="submit">
</form>
