<body>
  <div class="wrapper">
    <h4>The Travel Log</h4>
    <nav>
      <% if logged_in? %>
        <p>Welcome, <%=current_user.username%></p>
        <a href="/destinations/new">Create Destination</a>
        <a href="/activities/new">Create Activity</a>
        <a href="/logout">Log Out</a>
      <%else%>
        <a href="/register">Register</a>
        <a href="/login">Log In</a>
      <%end%>
    </nav>
    <% if !@error.nil?%>
      <%=@error%>
    <% end %>

    <%= yield %>

    <footer class="branding">
      <small>&copy; 2017 <strong>TravelLogSinatraProject</strong></small>
    </footer>
  </div>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
